RewriteEngine on
AddType application/x-httpd-php55 .php
RewriteCond %{REQUEST_FILENAME} !-d
# a local file is requested
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !=/favicon.ico
# meet condition below
RewriteRule \.(gif|jpg|png|css|ico|swf|js|inc\.php)$ - [L]
# file forbidden
RewriteRule \.(txt|log|xml)$ - [F]
#RewriteRule ^index/(\w+)(|/)$ index.php?page=$1 [NC,L]
#RewriteRule ^index/(\w+)/([\w-]+) index.php?page=$1&id=$2 [NC,L]
#from here is good
RewriteRule ^(\w+)$ index.php?class=$1 [NC,L]
RewriteRule ^(\w+)/(|/)$ index.php?class=$1 [NC,L]
RewriteRule ^(\w+)/([\w-]+)$ index.php?class=$1&page=$2 [NC,L]
RewriteRule ^(\w+)/([\w-]+)/([\w-]+)$ index.php?class=$1&page=$2&id=$3 [NC,L]
<ifModule mod_gzip.c>  
mod_gzip_on Yes  
mod_gzip_dechunk Yes
mod_gzip_item_include file .(html?|txt|css|js|php|pl)$  
mod_gzip_item_include handler ^cgi-script$  
mod_gzip_item_include mime ^text/.*  
mod_gzip_item_include mime ^application/x-javascript.*  
mod_gzip_item_exclude mime ^image/.*  
mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*  
</ifModule>
php_value date.timezone 'America/Toronto'
php_value upload_max_filesize 3M
#php_flag display_errors Off
# block visitors referred from semalt.com
RewriteCond %{HTTP_REFERER} semalt\.com [NC]
RewriteRule .* â€“ [F]
# End semalt block
# block referer spam buttons for website
RewriteCond %{HTTP_REFERER} buttons\-for\-website\.com
RewriteRule ^.* - [F,L]
# End buttons for website block